---
import { generateWebSiteSchema } from '../utils/schema';
import Analytics from '@vercel/analytics/astro';
import pkg from '../../package.json';
import Search from '../components/Search.astro';
import CustomHead from '../components/CustomHead.astro';

interface Props {
  title: string;
  description?: string;
  includeWebSiteSchema?: boolean;
}

const { 
  title, 
  description = "Curated insights on AI, machine learning, and open-source tools — by Dr. Prahlad G. Menon",
  includeWebSiteSchema = false
} = Astro.props;

const websiteSchema = includeWebSiteSchema ? generateWebSiteSchema() : null;
const version = pkg.version;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0a0a0a" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="The Menon Lab Blog" href="/rss.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://blog.themenonlab.com/og-image.svg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content={Astro.url} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://blog.themenonlab.com/og-image.svg" />
    {websiteSchema && <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />}
    <title>{title}</title>
    <CustomHead />
    <slot name="head" />
    <script is:inline>
      // Prevent flash of unstyled content (FOUC)
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          return 'light';
        }
        return 'dark';
      })();
      document.documentElement.setAttribute('data-theme', theme);
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <header>
      <nav aria-label="Main navigation">
        <a href="/" class="logo" aria-label="The Menon Lab">
          <svg class="logo-icon" width="24" height="24" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="20" cy="20" r="16" stroke="currentColor" stroke-width="2.5"/>
            <line x1="20" y1="4" x2="20" y2="8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <circle cx="20" cy="3" r="1.5" fill="currentColor"/>
            <circle cx="14" cy="17" r="2" fill="currentColor"/>
            <circle cx="26" cy="17" r="2" fill="currentColor"/>
            <path d="M 13 25 Q 20 28 27 25" stroke="currentColor" stroke-width="2" stroke-linecap="round" fill="none"/>
            <circle cx="8" cy="12" r="1" fill="currentColor"/>
            <circle cx="32" cy="12" r="1" fill="currentColor"/>
            <circle cx="8" cy="28" r="1" fill="currentColor"/>
            <circle cx="32" cy="28" r="1" fill="currentColor"/>
          </svg>
          <span>The Menon Lab</span>
        </a>
        <div class="mobile-controls">
          <button id="theme-toggle" aria-label="Toggle theme" class="theme-toggle">
            <svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="10" cy="10" r="4" stroke="currentColor" stroke-width="2"/>
              <line x1="10" y1="1" x2="10" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="10" y1="17" x2="10" y2="19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="19" y1="10" x2="17" y2="10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="3" y1="10" x2="1" y2="10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="16.364" y1="3.636" x2="14.95" y2="5.05" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="5.05" y1="14.95" x2="3.636" y2="16.364" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="16.364" y1="16.364" x2="14.95" y2="14.95" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="5.05" y1="5.05" x2="3.636" y2="3.636" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17 10.5C17 14.0899 14.0899 17 10.5 17C6.91015 17 4 14.0899 4 10.5C4 6.91015 6.91015 4 10.5 4C10.7761 4 11.0479 4.01709 11.3145 4.05027C10.0924 5.18669 9.33333 6.82235 9.33333 8.66667C9.33333 11.8803 11.9531 14.5 15.1667 14.5C16.0076 14.5 16.8014 14.3178 17.5162 13.9916C17.1781 14.9267 16.6601 15.7787 16 16.5C15.34 17.2213 14.5446 17.8004 13.6667 18.1966" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button id="mobile-menu-toggle" aria-label="Toggle mobile menu" class="mobile-menu-toggle">
            <svg class="hamburger-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line x1="3" y1="6" x2="21" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="3" y1="12" x2="21" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="3" y1="18" x2="21" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        </div>
        <div class="nav-links" id="mobile-menu">
          <a href="/about">About</a>
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
          <a href="https://github.com/menonpg" target="_blank" rel="noopener noreferrer">GitHub</a>
          <Search />
          <button id="theme-toggle-desktop" aria-label="Toggle theme" class="theme-toggle theme-toggle-desktop">
            <svg class="sun-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="10" cy="10" r="4" stroke="currentColor" stroke-width="2"/>
              <line x1="10" y1="1" x2="10" y2="3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="10" y1="17" x2="10" y2="19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="19" y1="10" x2="17" y2="10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="3" y1="10" x2="1" y2="10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="16.364" y1="3.636" x2="14.95" y2="5.05" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="5.05" y1="14.95" x2="3.636" y2="16.364" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="16.364" y1="16.364" x2="14.95" y2="14.95" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="5.05" y1="5.05" x2="3.636" y2="3.636" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <svg class="moon-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17 10.5C17 14.0899 14.0899 17 10.5 17C6.91015 17 4 14.0899 4 10.5C4 6.91015 6.91015 4 10.5 4C10.7761 4 11.0479 4.01709 11.3145 4.05027C10.0924 5.18669 9.33333 6.82235 9.33333 8.66667C9.33333 11.8803 11.9531 14.5 15.1667 14.5C16.0076 14.5 16.8014 14.3178 17.5162 13.9916C17.1781 14.9267 16.6601 15.7787 16 16.5C15.34 17.2213 14.5446 17.8004 13.6667 18.1966" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </nav>
    </header>
    <main id="main-content">
      <slot />
    </main>
    <footer>
      <p>© {new Date().getFullYear()} Dr. Prahlad G. Menon · <a href="https://themenonlab.com" target="_blank">The Menon Lab</a></p>
    </footer>
    <Analytics />
    <script is:inline>
      // Theme toggle functionality
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          return 'light';
        }
        return 'dark';
      };

      const setTheme = (theme) => {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
      };

      // Set initial theme
      setTheme(getTheme());

      // Handle toggle button clicks (both desktop and mobile)
      const toggleTheme = () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        setTheme(newTheme);
      };
      
      document.getElementById('theme-toggle')?.addEventListener('click', toggleTheme);
      document.getElementById('theme-toggle-desktop')?.addEventListener('click', toggleTheme);

      // Listen for system theme changes
      window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
          setTheme(e.matches ? 'light' : 'dark');
        }
      });

      // Mobile menu toggle
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuToggle?.addEventListener('click', () => {
        mobileMenuToggle.classList.toggle('active');
        mobileMenu?.classList.toggle('active');
      });

      // Close mobile menu when clicking a link
      mobileMenu?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenuToggle?.classList.remove('active');
          mobileMenu?.classList.remove('active');
        });
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        if (mobileMenu?.classList.contains('active')) {
          if (!mobileMenu.contains(e.target) && !mobileMenuToggle?.contains(e.target)) {
            mobileMenuToggle?.classList.remove('active');
            mobileMenu?.classList.remove('active');
          }
        }
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0a;
    --fg: #e5e5e5;
    --accent: #60a5fa;
    --muted: #a3a3a3;
    --border: #262626;
  }

  [data-theme="light"] {
    --bg: #ffffff;
    --fg: #171717;
    --accent: #2563eb;
    --muted: #525252;
    --border: #e5e5e5;
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme="dark"]) {
      --bg: #ffffff;
      --fg: #171717;
      --accent: #2563eb;
      --muted: #525252;
      --border: #e5e5e5;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
    
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-display: swap;
    background: var(--bg);
    color: var(--fg);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Skip link for keyboard navigation */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--accent);
    color: white;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 0 0 4px 0;
    z-index: 100;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Enhanced focus indicators for accessibility */
  a:focus-visible,
  button:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
    border-radius: 2px;
  }

  header {
    border-bottom: 1px solid var(--border);
    padding: 1.5rem 2rem;
  }

  nav {
    max-width: 60rem;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--accent);
    text-decoration: none;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--fg);
  }

  .theme-toggle {
    background: none;
    border: none;
    color: var(--muted);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: color 0.2s;
    position: relative;
    z-index: 101;
  }

  .theme-toggle:hover {
    color: var(--fg);
  }

  .theme-toggle svg {
    width: 20px;
    height: 20px;
  }

  [data-theme="dark"] .sun-icon,
  [data-theme="light"] .moon-icon,
  :root:not([data-theme]) .sun-icon {
    display: block;
  }

  [data-theme="dark"] .moon-icon,
  [data-theme="light"] .sun-icon,
  :root:not([data-theme]) .moon-icon {
    display: none;
  }

  @media (prefers-color-scheme: light) {
    :root:not([data-theme]) .sun-icon {
      display: none;
    }
    :root:not([data-theme]) .moon-icon {
      display: block;
    }
  }

  main {
    flex: 1;
    max-width: 60rem;
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
  }

  footer {
    border-top: 1px solid var(--border);
    padding: 2rem;
    text-align: center;
    color: var(--muted);
    font-size: 0.875rem;
  }

  footer a {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  footer a:hover {
    text-decoration-thickness: 2px;
  }

  footer .version {
    margin-top: 0.5rem;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  h2 {
    font-size: 1.875rem;
    margin: 2rem 0 1rem;
    line-height: 1.3;
  }

  h3 {
    font-size: 1.5rem;
    margin: 1.5rem 0 0.75rem;
  }

  p {
    margin-bottom: 1rem;
    color: var(--muted);
  }

  a {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }
  
  /* Remove underlines from navigation, logo, and button-styled links */
  nav a,
  .logo,
  .button-primary,
  .button-secondary,
  a.button-primary,
  a.button-secondary {
    text-decoration: none;
  }

  code {
    background: var(--border);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, monospace;
  }

  pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    line-height: 1.5;
  }

  pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
  }

  ul, ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
    color: var(--muted);
  }

  li {
    margin-bottom: 0.5rem;
  }

  /* Mobile controls container */
  .mobile-controls {
    display: none;
  }

  /* Hide desktop theme toggle on mobile */
  .theme-toggle-desktop {
    display: block;
  }

  /* Mobile menu toggle button */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--muted);
    cursor: pointer;
    padding: 0.5rem;
    transition: color 0.2s;
    position: relative;
    z-index: 101;
  }

  .mobile-menu-toggle:hover {
    color: var(--fg);
  }

  .mobile-menu-toggle svg {
    width: 24px;
    height: 24px;
  }

  .mobile-menu-toggle .close-icon {
    display: none;
  }

  .mobile-menu-toggle.active .hamburger-icon {
    display: none;
  }

  .mobile-menu-toggle.active .close-icon {
    display: block;
  }

  @media (max-width: 768px) {
    header {
      padding: 1rem 1.5rem;
    }

    nav {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }

    .mobile-controls {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    .theme-toggle-desktop {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      height: 100vh;
      width: 80%;
      max-width: 300px;
      background: var(--bg);
      border-left: 1px solid var(--border);
      flex-direction: column;
      gap: 2rem;
      align-items: flex-start;
      padding: 5rem 2rem 2rem;
      transition: right 0.3s ease;
      z-index: 100;
      box-shadow: -4px 0 12px rgba(0, 0, 0, 0.1);
    }

    .nav-links.active {
      right: 0;
    }

    .nav-links a {
      font-size: 1.125rem;
    }

    main {
      padding: 2rem 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }
  }
</style>
