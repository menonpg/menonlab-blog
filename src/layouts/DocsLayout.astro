---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/docs', label: 'Introduction' },
  { href: '/docs/installation', label: 'Installation' },
  { href: '/docs/writing', label: 'Writing Content' },
  { href: '/docs/images', label: 'Images' },
  { href: '/docs/tags', label: 'Tag System' },
  { href: '/docs/publishing', label: 'Publishing Workflow' },
  { href: '/docs/configuration', label: 'Configuration' },
  { href: '/docs/ai-native', label: 'AI-Native Features' },
  { href: '/docs/philosophy', label: 'Philosophy' },
];
---

<BaseLayout title={title} description={description || 'OmarCMS Documentation'}>
  <div class="docs-container">
    <nav class="docs-sidebar">
      <h2>Documentation</h2>
      <ul>
        {navItems.map(item => (
          <li>
            <a 
              href={item.href} 
              class:list={[{ active: currentPath === item.href || (item.href === '/docs' && currentPath === '/docs/') }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <article class="docs-content">
      <slot />
    </article>
  </div>
</BaseLayout>

<style>
  .docs-container {
    display: grid;
    grid-template-columns: 180px 1fr;
    gap: 2rem;
    max-width: 75rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .docs-sidebar {
    position: sticky;
    top: 2rem;
    height: fit-content;
  }

  .docs-sidebar h2 {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: var(--fg);
  }

  .docs-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .docs-sidebar li {
    margin-bottom: 0.5rem;
  }

  .docs-sidebar a {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--muted);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  .docs-sidebar a:hover {
    color: var(--fg);
    background: rgba(96, 165, 250, 0.1);
  }

  .docs-sidebar a.active {
    color: var(--accent);
    background: rgba(96, 165, 250, 0.1);
    font-weight: 500;
  }

  .docs-content {
    max-width: 42rem;
  }

  .docs-content h1 {
    margin-bottom: 2rem;
  }

  .docs-content h2 {
    margin: 2.5rem 0 1.5rem;
    font-size: 1.875rem;
  }

  .docs-content h3 {
    margin: 2rem 0 1rem;
    font-size: 1.25rem;
  }

  .docs-content p {
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .docs-content ul {
    margin-bottom: 1.5rem;
  }

  .docs-content li {
    margin-bottom: 0.5rem;
  }

  .docs-content a {
    color: var(--accent);
    text-decoration: none;
  }

  .docs-content a:hover {
    text-decoration: underline;
  }

  .docs-content pre {
    margin: 1.5rem 0;
  }

  @media (max-width: 768px) {
    .docs-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .docs-sidebar {
      position: static;
      border-bottom: 1px solid var(--border);
      padding-bottom: 1.5rem;
    }

    .docs-sidebar ul {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .docs-sidebar li {
      margin: 0;
    }
  }
</style>
