---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 5);
---

<BaseLayout title="The Menon Lab - AI & Open Source Insights" includeWebSiteSchema={true}>
  <div class="hero">
    <div class="hero-content">
      <h1>The Menon Lab</h1>
      <p class="subtitle">
        Curated insights on AI, machine learning, and open-source tools — by Dr. Prahlad G. Menon
      </p>
      <a href="/blog" class="button-primary">Read the Blog →</a>
    </div>
  </div>

  <section class="latest-posts">
    <h2>Latest Posts</h2>
    <div class="posts-grid">
      {posts.map((post) => (
        <article class="post-card">
          <a href={`/blog/${post.slug}/`}>
            <h3>{post.data.title}</h3>
            <time datetime={post.data.date}>{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            {post.data.tags && (
              <div class="tags">
                {post.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        </article>
      ))}
    </div>
    <a href="/blog" class="view-all">View all posts →</a>
  </section>

  <section class="about">
    <h2>About</h2>
    <p>
      I'm a researcher and engineer exploring the intersection of AI, healthcare, and practical tooling.
      This blog documents interesting projects, libraries, and tools I discover across the AI/ML ecosystem.
    </p>
    <p>
      Topics include: AI agents, large language models, computer vision, healthcare AI, RAG systems, 
      and open-source tools worth knowing about.
    </p>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 1rem 3rem;
    border-bottom: 1px solid var(--border);
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--fg) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--muted);
    margin-bottom: 2rem;
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
  }

  .button-primary {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    color: white;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(96, 165, 250, 0.3);
  }

  .latest-posts {
    margin-bottom: 4rem;
  }

  .latest-posts h2 {
    margin-bottom: 2rem;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    padding: 1.5rem;
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    transition: all 0.2s;
  }

  .post-card:hover {
    border-color: var(--accent);
    transform: translateX(4px);
  }

  .post-card a {
    text-decoration: none;
    color: inherit;
  }

  .post-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .post-card time {
    font-size: 0.875rem;
    color: var(--muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(96, 165, 250, 0.1);
    color: var(--accent);
    border-radius: 0.25rem;
  }

  .view-all {
    display: inline-block;
    margin-top: 1.5rem;
    color: var(--accent);
    font-weight: 500;
  }

  .about {
    padding: 2rem;
    background: rgba(96, 165, 250, 0.05);
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .about h2 {
    margin-bottom: 1rem;
  }

  .about p {
    color: var(--muted);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .about p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }
  }
</style>
